<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_marginStart="20dp">
   <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imMed_id"
        android:scaleType="fitXY"
        android:layout_margin="10dp"
        android:contentDescription="@string/picture_of_the_medicine"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/txt_nom"
            android:layout_width="wrap_content"
            android:hint="@string/nom"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/txt_nbPrises"
            android:layout_width="wrap_content"
            android:hint="@string/nb_prises"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/txt_heures"
            android:layout_width="wrap_content"
            android:hint="@string/heures"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"/>


    </LinearLayout>


</LinearLayout>